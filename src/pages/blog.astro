---
import Header from "../components/Header.astro";
import Project from "../components/Project.astro";
import Sidebar from "../components/Sidebar.astro";
const projects = [
  {
    title: "Blog1",
    desc: [
      "1",
      "2",
      "3",
      "4"
    ],
    tech: ["1", "2", "3", "4", "5"]
  },
  {
    title: "Blog2",
    desc: [
      "1",
      "2",
      "3"
    ],
    tech: ["hello", "hello", "hello", "hello"]
  },
  {
    title: "Blog3",
    desc: [
      "1",
      "2",
      "3"
    ],
    tech: ["1", "2", "3", "4", "5"]
  }
];
---

<!DOCTYPE html>
<html
>
  <Header title="Blog | Kaitlin" />
  <body>
    <div class="content">
        <Sidebar selectedItem="blog" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div></a
            >
          </div>
          <div class="content-container">
            <h1>Blog</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {projects.map(project => (
                      <Project 
                        title={project.title} 
                        desc={project.desc}
                        tech={project.tech}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
